{
  "version": 2,
  "builds": [
    {
      "src": "prisma/schema.prisma",
      "use": "@prisma/client/scripts/build",
      "config": {
        "datasources": [
          {
            "url": "env.POSTGRES_URL"
          }
        ]
      }
    },
    {
      "src": "./src",
      "use": "@vercel/node",
      "config": {
        "watch": ["prisma/**/*.prisma", "src/**/*.ts"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
